<%= render 'shared/logout_button' %>

<h1>User Profile</h1>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name.present? ? @user.name : "Not provided" %>
</p>

<p>
  <strong>Contact Number:</strong>
  <%= @user.contact_number.present? ? @user.contact_number : "Not provided" %>
</p>

<p>
  <strong>Address:</strong>
  <%= @user.address.present? ? @user.address : "Not provided" %>
</p>

<p>
  <strong>Balance:</strong>
  <%= @user.balance.present? ? @user.balance : "Not provided" %>
</p>

<%= link_to 'Edit Profile', edit_user_path %>
