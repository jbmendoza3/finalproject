

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="w-full">
     <div class="bg-white p-10 mt-24 rounded-lg shadow md:w-3/4 mx-auto lg:w-1/4">
      <h1 class="text-center font-bold mb-10 text-violet-900 text-lg">User Registration</h1>
       <form action="">
         <div class="mb-2">
          <%= f.label :email, class: "block font-bold text-gray-600" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-300 shadow p-3 w-full rounded mb-4" %>
         </div>

         <div class="mb-5">
          <%= f.label :password, class: "block font-bold text-gray-600" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "border border-gray-300 shadow p-3 w-full rounded mb-4" %>
         </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "block mb-2 font-bold text-gray-600" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-gray-300 shadow p-3 w-full rounded mb-4" %>
          </div>


          <%= f.submit "Sign up", class: "block w-full !bg-violet-900 text-white font-bold !p-4 !rounded-lg hover:!bg-violet-950 mt-4" %>

          <br>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
       </form>
     </div>
   </div>
</div>

<% end %>


