

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>



<div class="w-full">
     <div class="bg-white p-10 mt-24 rounded-lg shadow md:w-3/4 mx-auto lg:w-1/4">
      <%= link_to 'Back to Home', index_home_index_path, class: "underline hover:text-violet-700 text-sm" %>
      <h1 class="text-center font-bold mb-10 text-violet-900 text-lg">User Login</h1>
       <form action="">
         <div class="mb-2">
          <%= f.label :email, class: "block font-bold text-gray-600" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-300 shadow p-3 w-full rounded mb-" %>
         </div>

         <div class="mb-5">
          <%= f.label :password, class: "block mb-2 font-bold text-gray-600" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "border border-gray-300 shadow p-3 w-full rounded mb-" %>
         </div>

         <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <%= f.submit "Log in", class: "block w-full !bg-violet-900 text-white font-bold !p-4 !rounded-lg hover:!bg-violet-950 mt-4" %>

          <br>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
       </form>
     </div>
   </div>
</div>

<% end %>
