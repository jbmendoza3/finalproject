<%= form_with(model: [:admin, item], class: "item-form") do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <%= form.label :item_name, style: "display: block" %>
  <%= form.text_field :item_name, required: true %>
  

  
  <%= form.label :item_description, style: "display: block" %>
  <%= form.text_field :item_description, required: true  %>
  
  
  <%= form.label :price, style: "display: block" %>
  <%= form.number_field :price, required: true  %>

  <%= form.label :image, style: "display: block" %>
  <%= form.file_field :image, class: "mb-4" %>
  <br>
  <div class="submit-container">
    <%= form.submit %>
  </div>
  
  
<% end %>



