<div class="admin-container">
  <div class="admin-sidebar bg-gray-800">
        <p>
            <%= link_to admin_dashboard_path do %>
                <i class="fa-solid fa-table-columns"></i> Dashboard
            <% end %>
        </p>

        <p><%= link_to admin_transactions_path do %>
            <i class="fa-solid fa-box"></i> Transactions
        <% end %></p>

        <p class="current-page"><%= link_to admin_items_path do %>
            <i class="fa-solid fa-list"></i> Item List
        <% end %></p>

        <p><%= link_to admin_user_list_index_path do %>
            <i class="fa-solid fa-users"></i> Users
        <% end %></p>

        <p><%= render 'shared/logout_button' %></p>
  </div>
  <div class="admin-sidebar-content">
    <div class="content-header">
      <h1 class="content-title2">Item List
        <span class="notice" ><%= notice %></span>
        <span class="item-buttons2"><%= link_to 'Back to Item List', admin_items_path	%></span></h1>
    </div>
    <div class="items-container2">
        <h2 class="submit-container">Add New Item</h2>
        <%= render "form", item: @item %>
    </div>
  </div>
</div>
