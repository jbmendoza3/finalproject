<h2>Checkout</h2>

<%= notice %>

<% if @cart.cart_items.any? %>
  <ul>
    <% @cart.cart_items.each do |cart_item| %>
      <li>
        <%= cart_item.item.item_name %> - Quantity: <%= cart_item.quantity %> - Price: <%= cart_item.item.price %>
      </li>
    <% end %>
  </ul>

  <p><strong>Total Amount:</strong> <%= number_to_currency(@total_amount, unit: "â‚±", format: "%u%n") %></p>

  <%= button_to 'Proceed to Payment', process_payment_checkout_path, method: :post, class: 'btn btn-primary' %>

<% else %>
  <p>Your cart is empty!</p>
<% end %>
