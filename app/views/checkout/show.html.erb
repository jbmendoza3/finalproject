<div class="max-w-4xl mx-auto p-4">
  <h2 class="text-2xl font-bold mb-4">Checkout</h2>

  <%= notice %>

  <% if @cart.cart_items.any? %>
    <ul class="mb-6 space-y-4">
      <% @cart.cart_items.each do |cart_item| %>
        <li class="flex justify-between items-center border-b pb-2">
          <span class="font-medium text-lg"><%= cart_item.item.item_name %></span>
          <span>Quantity: <%= cart_item.quantity %></span>
          <span class="text-right text-lg text-green-600">₱<%= cart_item.item.price %></span>
        </li>
      <% end %>
    </ul>

    <p class="font-semibold text-xl mb-4">
      <strong>Total Amount:</strong> <%= number_to_currency(@total_amount, unit: "₱", format: "%u%n") %>
    </p>

    <%= button_to 'Proceed to Payment', process_payment_path, method: :post, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>

  <% else %>
    <p class="text-gray-500">Your cart is empty!</p>
  <% end %>
</div>
