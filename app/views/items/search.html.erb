<h1 class="text-3xl font-bold text-center my-8">Search Results</h1>

<% if @items.any? %>
  <div class="max-w-4xl mx-auto">
    <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @items.each do |item| %>
        <li class="bg-white p-6 rounded-lg shadow-lg transform hover:scale-105 transition-transform">
          <h2 class="text-xl font-semibold text-gray-800 mb-4"><%= link_to item.item_name, description_item_path(item), class: "text-blue-500 hover:underline" %></h2>
          <p class="text-gray-600 mb-2"><%= item.item_description.truncate(50) %></p>
          <p class="text-lg font-bold text-gray-900">Price: <%= number_to_currency(item.price, unit: "â‚±", format: "%u%n") %></p>
          <%= button_to 'Add to Cart', add_item_cart_path(item_id: item.id), method: :post, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4' %>
        </li>
      <% end %>
    </ul>
  </div>
<% else %>
  <p class="text-center text-gray-500 text-xl">No items found</p>
  <div class="text-center mt-6">
    <%= link_to 'Return to Shop', root_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded' %>
  </div>
<% end %>
